# Environment
NODE_ENV=development

# Server
PORT=3333
API_PREFIX=api

# Database
# Option 1: Use DATABASE_URL for cloud databases (Neon, Supabase, etc.)
DATABASE_URL=postgresql://username:password@host:5432/database?sslmode=require

# Option 2: Use individual parameters for local PostgreSQL
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=astral_turf_user
# DB_PASSWORD=your_secure_password_here
# DB_DATABASE=astral_turf_db

# JWT Configuration
JWT_ACCESS_SECRET=your_jwt_access_secret_key_change_this_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_this_in_production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Redis (Optional - if not set, sessions will use PostgreSQL)
# Local Redis:
# REDIS_URL=redis://localhost:6379
# Cloud Redis (Upstash, Redis Cloud, etc.):
# REDIS_URL=redis://username:password@host:port
# Leave empty to use PostgreSQL for sessions
REDIS_URL=

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@astralturf.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Logging
LOG_LEVEL=debug
